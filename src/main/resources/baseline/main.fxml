<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<FlowPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="baseline.TodoListApplicationController">
    <children>
        <MenuBar maxHeight="25.0" maxWidth="1.7976931348623157E308" minWidth="50.0" prefHeight="25.0" prefWidth="750.0">
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem fx:id="importMenu" mnemonicParsing="false" onAction="#onImportButtonClicked" text="Import" />
                        <MenuItem fx:id="exportMenu" mnemonicParsing="false" onAction="#onExportButtonClicked" text="Export" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                    <items>
                        <MenuItem mnemonicParsing="false" text="About" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
        <VBox layoutY="26.0" maxHeight="1.7976931348623157E308" maxWidth="200.0" minHeight="425.0" minWidth="200.0" prefHeight="375.0" prefWidth="200.0">
            <children>
                <Label alignment="CENTER" contentDisplay="TOP" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="136.0" prefWidth="200.0" text="To-Do Machine">
                    <VBox.margin>
                        <Insets />
                    </VBox.margin>
                    <font>
                        <Font name="Bauhaus 93" size="24.0" />
                    </font>
                </Label>
                <Separator prefWidth="200.0" />
                <Button fx:id="importButton" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onImportButtonClicked" prefHeight="25.0" prefWidth="202.0" text="Import To-Do List">
                    <VBox.margin>
                        <Insets left="5.0" right="5.0" top="5.0" />
                    </VBox.margin>
                </Button>
                <Button fx:id="exportButton" alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onExportButtonClicked" prefHeight="25.0" prefWidth="196.0" text="Export Selected To-Do List">
                    <VBox.margin>
                        <Insets left="5.0" right="5.0" top="15.0" />
                    </VBox.margin>
                </Button>
                <Button fx:id="removeItemButton" alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onRemoveButtonClicked" prefHeight="25.0" prefWidth="195.0" text="Remove Selected Items">
                    <opaqueInsets>
                        <Insets />
                    </opaqueInsets>
                    <VBox.margin>
                        <Insets left="5.0" right="5.0" top="30.0" />
                    </VBox.margin>
                </Button>
                <Button fx:id="clearItemButton" alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onClearButtonClicked" prefHeight="25.0" prefWidth="195.0" text="CLEAR ALL ITEMS" textFill="RED">
                    <opaqueInsets>
                        <Insets />
                    </opaqueInsets>
                    <VBox.margin>
                        <Insets left="5.0" right="5.0" top="30.0" />
                    </VBox.margin>
                </Button>
            </children>
        </VBox>
        <Separator maxHeight="1.7976931348623157E308" orientation="VERTICAL" prefHeight="425.0" prefWidth="5.0" />
        <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="425.0" prefWidth="539.0">
            <children>
                <Label fx:id="selectedItemCounter" text="Number of Selected Items: 0" />
                <TableView fx:id="itemTable" editable="true" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="464.0" prefWidth="534.0">
                    <columns>
                        <TableColumn fx:id="completedColumn" prefWidth="75.0" text="Completed" />
                        <TableColumn fx:id="descriptionColumn" onEditCommit="#onDescriptionColumnEdit" prefWidth="365.0" text="Description" />
                        <TableColumn fx:id="dueDateColumn" maxWidth="1.7976931348623157E308" minWidth="0.0" onEditCommit="#onDueDateColumnEdit" prefWidth="93.0" text="Due Date" />
                    </columns>
                    <VBox.margin>
                        <Insets bottom="5.0" right="10.0" />
                    </VBox.margin>
                </TableView>
                <HBox prefHeight="100.0" prefWidth="200.0">
                    <children>
                        <Button fx:id="showAllItemsButton" mnemonicParsing="false" onAction="#onAllItemsButtonClicked" prefHeight="25.0" prefWidth="98.0" text="Show All Items">
                            <HBox.margin>
                                <Insets right="20.0" />
                            </HBox.margin>
                        </Button>
                        <Button fx:id="showCompleteItemsButton" mnemonicParsing="false" onAction="#onCompleteItemsButtonClicked" text="Show Only Completed Items">
                            <HBox.margin>
                                <Insets right="20.0" />
                            </HBox.margin>
                        </Button>
                        <Button fx:id="showIncompleteItemsButton" mnemonicParsing="false" onAction="#onIncompleteItemsButtonClicked" text="Show Only Incomplete Items" />
                    </children>
                </HBox>
                <VBox prefHeight="75.0" prefWidth="534.0">
                    <children>
                        <Label text="Create New Item:" underline="true">
                            <VBox.margin>
                                <Insets top="5.0" />
                            </VBox.margin>
                        </Label>
                        <HBox minHeight="30.0" prefHeight="30.0" prefWidth="200.0">
                            <children>
                                <TextField fx:id="newDescriptionField" onAction="#onDescriptionFieldFill" prefHeight="25.0" prefWidth="288.0" promptText="Description" />
                                <DatePicker fx:id="newDueDateField" prefHeight="25.0" prefWidth="156.0" promptText="Due Date (Optional)">
                                    <HBox.margin>
                                        <Insets left="5.0" />
                                    </HBox.margin>
                                </DatePicker>
                                <Button fx:id="addItemButton" alignment="CENTER" mnemonicParsing="false" onAction="#onAddItemButtonClicked" prefHeight="25.0" prefWidth="77.0" text="Add Item">
                                    <HBox.margin>
                                        <Insets left="5.0" />
                                    </HBox.margin>
                                </Button>
                            </children>
                            <VBox.margin>
                                <Insets right="5.0" top="5.0" />
                            </VBox.margin>
                        </HBox>
                        <HBox prefHeight="100.0" prefWidth="200.0">
                            <children>
                                <HBox prefHeight="17.0" prefWidth="287.0">
                                    <children>
                                        <Label prefHeight="17.0" prefWidth="127.0" text="Limit: 256 characters" />
                                        <Label fx:id="descriptionCharCounter" prefHeight="17.0" prefWidth="156.0" text="Current: 0 characters">
                                            <HBox.margin>
                                                <Insets left="20.0" />
                                            </HBox.margin>
                                        </Label>
                                    </children>
                                </HBox>
                                <Label text="Format: YYYY-MM-DD">
                                    <HBox.margin>
                                        <Insets left="5.0" />
                                    </HBox.margin>
                                </Label>
                            </children>
                        </HBox>
                    </children>
                    <VBox.margin>
                        <Insets right="5.0" />
                    </VBox.margin>
                </VBox>
            </children>
            <FlowPane.margin>
                <Insets left="5.0" />
            </FlowPane.margin>
        </VBox>
    </children>
</FlowPane>
